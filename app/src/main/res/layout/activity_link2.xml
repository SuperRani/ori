<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Link2Activity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F8EAB5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:gravity ="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/shop1"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop1" />

        <ImageButton
            android:id="@+id/shop2"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop2" />
        <ImageButton
            android:id="@+id/shop3"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop3"/>
        <ImageButton
            android:id="@+id/shop4"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop4"/>
        <ImageButton
            android:id="@+id/shop5"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop5"/>
        <ImageButton
            android:id="@+id/shop6"
            android:layout_width="299dp"
            android:layout_height="302dp"
            android:background="@drawable/shop6"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>